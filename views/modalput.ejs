<div id="editar">
  <h3>Atualizar Filme</h3>
  <section id="cadastro">
    <form action="/update/<%= filmePut.id %>" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= filmePut.nome %>" />

      <label for="descricao">Descrição:</label>
      <input
        type="text"
        id="descricao"
        name="descricao"
        value="<%= filmePut.descricao %>"
      />

      <label for="imagem">Link da Imagem</label>
      <input
        type="text"
        id="imagem"
        name="imagem"
        value="<%= filmePut.imagem %>"
      />

      <button id="btnCadastrar" type="submit">ATUALIZAR</button>
    </form>
  </section>
</div>

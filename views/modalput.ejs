<div id="editar">
  <h3>Atualizar Filme</h3>
  <section id="cadastro">
    <form action="/update/<%= filmePut.id %>" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= filmePut.nome %>" />

      <label for="descricao">Descrição:</label>
      <input
        type="text"
        id="descricao"
        name="descricao"
        value="<%= filmePut.descricao %>"
      />

      <label for="imagem">Link da Imagem</label>
      <input
        type="text"
        id="imagem"
        name="imagem"
        value="<%= filmePut.imagem %>"
      />

      <label for="autor">Autor</label>
      <input
        type="text"
        id="autor"
        name="autor"
        value="<%= filmePut.autor %>"
      />

      <label for="genero">Genêro</label>
      <input
        type="text"
        id="genero"
        name="genero"
        value="<%= filmePut.genero %>"
      />
      
      <label for="anoLancamento">Ano Lançamento</label>
      <input
        type="text"
        id="anoLancamento"
        name="anoLancamento"
        value="<%= filmePut.anoLancamento %>"
      />

      <button id="btnCadastrar" type="submit">ATUALIZAR</button>
    </form>
  </section>
</div>

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%-include('./head.ejs')%>
  </head>

  <body>
    <%- include('./nav') %>
    <h1>Cadastrar Filme</h1>

    <div><% if(message != "") { %> <%- include('alerts.ejs') %> <% } %></div>

    <section id="cadastro">
      <form action="/create" method="post">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" required />

        <label for="imagem">Link Imagem:</label>
        <input type="text" name="imagem" id="imagem" required />

        <label for="descricao">Descrição:</label>
        <input type="text" name="descricao" id="descricao" required />

        <label for="diretor">Diretor:</label>
        <input type="text" name="diretor" id="autor" required />

        <label for="genero">Gênero:</label>
        <input type="text" name="genero" id="genero" required />
    
        <label for="ano">Ano Lançamento:</label>
        <input type="text" name="ano" id="anoLancamento" required />

        <button type="submit">CADASTRAR</button>
      </form>
    </section>

    <%- include('./footer') %>

    <script src="../js/script.js"></script>
  </body>
</html>
